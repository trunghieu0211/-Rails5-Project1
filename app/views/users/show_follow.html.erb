<%= provide :title, @title %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div class="avatar_post"><%= link_to gravatar_for(@user), @user %></div>
      <h1><%= @user.name %></h1>
      <span><%= link_to t(".view_profile"), @user %></span>
      <span><b><%= t ".post" %></b> <%= @user.posts.count %></span>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
