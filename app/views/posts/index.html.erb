<% @post.each do |post|%>
<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
     <!--  <img src="..." alt="..."> -->
      <div class="caption">
        <h3><%= post.title %></h3>
        <p><%= post.body[1..50] %> ...</p>
        <p><%= link_to "View", post_path(post) %></p>
    </div>
  </div>
</div>
<% end %>
