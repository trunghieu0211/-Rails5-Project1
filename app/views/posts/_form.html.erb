<%= form_for @post do |f| %>
  <%= render "shared/error_messages", tmp: @post %>

  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :body %>
  <%= f.cktext_area :body, class: "form-control", size: "20x15" %>

   <%= f.submit t(".create"), class: "btn btn-primary" %>
<% end %>
